{
  "name": "theeasyapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run routes:watch\" \"bun --hot src/index.tsx\"",
    "start": "NODE_ENV=production bun src/index.tsx",
    "build": "bun run routes:generate && bun run build.ts",
    "routes:watch": "tsr watch",
    "routes:generate": "tsr generate",
    "test": "bun test",
    "lint": "bunx eslint . --ext .ts,.tsx",
    "ci": "bunx tsc --noEmit && bun test && bunx eslint . --ext .ts,.tsx --max-warnings=0 && bunx prettier --check . && bun run routes:generate"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.3",
    "@tanstack/react-router": "^1.132.47",
    "@tanstack/react-router-devtools": "^1.133.1",
    "@tanstack/react-virtual": "^3.13.12",
    "bun-plugin-tailwind": "^0.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "duckdb": "^1.4.1",
    "lucide-react": "^0.545.0",
    "motion": "^12.23.24",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@tanstack/router-cli": "^1.132.51",
    "@types/bun": "latest",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^7.0.0",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  }
}
